<h1><span class=one>M</span><span class=two>Y</span><span class=three>B</span><span class=four>O</span><span class=five>O</span><span class=six>K</span><span class=seven>S</span>
</h1>

<%# <%= session['user_id'] %> 

<% if logged_in? %>
    <h2>Welcome to My Books App <%= current_user['first_name'] %></h2>
   

    <section class="controls">
        <form action="/sessions" method="POST">
            <input type="hidden" name="_method" value="delete">
            <button>Logout</button>
        </form>
        <br>
        <a href="/books/new">Add books</a>
    </section>

  
    <section>
    <ol class="books">
    <% books.each do |book| %>
        <li>
            <section class ="book">
                <header>
                    <h2><%= book['title']%></h2>
                    <section class="controls">
                        <a href="/books/<%= book['id'] %>/edit">Edit</a>
                        <form action="/books/<%= book['id'] %>"method="POST">
                            <input type="hidden" name="_method" value="delete">
                            <button>Delete</button>
                        </form>
                    </section>
                </header>
                <div>
                    <img src="<%= book['image_url'] %>" alt="">
                    <ul>
                        <li>Author: <%= book['author'] %></li>
                        <li>Illustrator: <%= book['illustrator'] %></li>
                        <li>Quote: <%= book['quote'] %></li>
                    </ul>
                </div>
            </section>
        </li>
        <% end %>
    </ol>
    </section>
    <% else %>
        <a href="/sessions/new">Login</a>
        <a href="/users/new">Sign up</a>
  <% end %>